    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "removeComments": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["es2018"],
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src", "test"]
}
